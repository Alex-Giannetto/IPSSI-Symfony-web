{% extends 'category/index.html.twig' %}

{% block container %}
    <section>
        <h1>Info: </h1>
        <p><b>Title: </b> {{ category.title }}</p>
        <p><b>Description: </b> {{ category.description|default('aucune description') }}</p>

        <a href="{{ path('admin_modifyCategory', {id: category.id}) }}">Modify</a>
        <a href="{{ path('admin_deleteCategory', {id: category.id}) }}">Delete</a>
    </section>
    <section>
        <h1>Videos</h1>
        <div class="videos">
            {% for video in videos %}
                {% include 'Components/video/video.html.twig' with {'video':video, 'modification':false} %}
            {% endfor %}
        </div>
    </section>
{% endblock %}
